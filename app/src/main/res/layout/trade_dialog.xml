<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <TextView
        android:id="@+id/trade_title"
        android:layout_width="185dp"
        android:layout_height="23dp"
        android:layout_marginTop="120dp"
        android:text="Trade Shares"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/share_number"
        android:layout_width="202dp"
        android:layout_height="67dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trade_title" />

    <TextView
        android:id="@+id/share_text"
        android:layout_width="65dp"
        android:layout_height="32dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="96dp"
        android:text="shares"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/share_number"
        app:layout_constraintTop_toBottomOf="@+id/trade_title" />

    <TextView
        android:id="@+id/total"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="96dp"
        android:text="total"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/sell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/share_text"
        app:layout_constraintVertical_bias="0.157" />

    <Button
        android:id="@+id/buy"
        android:layout_width="108dp"
        android:layout_height="57dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="132dp"
        android:text="Buy"
        app:backgroundTint="#2E8C42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/share_number" />

    <Button
        android:id="@+id/sell"
        android:layout_width="106dp"
        android:layout_height="60dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="132dp"
        android:text="Sell"
        app:backgroundTint="#2E8C42"
        app:layout_constraintStart_toEndOf="@+id/buy"
        app:layout_constraintTop_toBottomOf="@+id/share_number" />

    <TextView
        android:id="@+id/total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="28dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/sell"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>